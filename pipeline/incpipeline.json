								},
								"sink": {
									"name": "date",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "amount",
									"type": "Int32",
									"physicalType": "String"
								},
								"sink": {
									"name": "amount",
									"type": "String",
									"physicalType": "String"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_increment_excel_input",
